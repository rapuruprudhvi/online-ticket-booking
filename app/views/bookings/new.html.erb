<!-- app/views/bookings/new.html.erb -->
<h1>New Booking</h1>

<% if alert %>
  <p style="color: red;"><%= alert %></p>
<% end %>

<%= form_with url: bookings_path, local: true do |form| %>
  <p>
    <%= form.label :movie_id %><br>
    <%= form.collection_select :movie_id, @movies, :id, :title %>
  </p>
  <p>
    <%= form.label :theatre_id %><br>
    <%= form.collection_select :theatre_id, @theatres, :id, :name %>
  </p>
  <p>
    <%= form.label :seat_numbers, "Seat Numbers (comma-separated)" %><br>
    <%= form.text_field :seat_numbers %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back to Movies', movies_path %>
